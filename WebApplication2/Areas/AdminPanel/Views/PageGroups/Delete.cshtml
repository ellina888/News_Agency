@model DAl.PageGroup

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.GroupTitle)
                </dt>

                <dd class="text-info">
                    @Html.DisplayFor(model => model.GroupTitle)
                </dd>

                <dd>
                    <br />
                </dd>

            </dl>
        </div>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="form-group">
                    @Html.ActionLink("بازگشت", "Index", null, htmlAttributes: new { @Class = "btn btn-primary btn-block" })
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="form-group">
                    <input type="submit" value="خذف" class="btn btn-danger btn-block" />
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        }
    </div>
</div>





