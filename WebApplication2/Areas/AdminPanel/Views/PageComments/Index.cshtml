@model IEnumerable<DAl.PageComment>

@{
    ViewBag.Title = "لیست نظرات";
}
<div class="col-lg-12">
    <br />
    <div class="panel panel-default">
        <div class="panel-heading"><h3>لیست نظرات</h3></div>
        <div class="panel-body">
            <p>
                @Html.ActionLink("جدید +", "Create", null, htmlAttributes: new { @Class = "btn btn-success" })
            </p>
            <div class="table-responsive">

                <table class="table table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Page.PageGroup.GroupTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Page.PageTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Website)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreateDate)
                        </th>
                        <th>دستورات</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Page.PageGroup.GroupTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Page.PageTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Website)
                            </td>
                            <td>
                                @String.Format("{0:dddd dd MMM yyyy}",item.CreateDate)
                                <br /><br />
                                ساعت @String.Format("{0:HH:mm:ss}", item.CreateDate)
                            </td>
                            <td nowrap>
                                <a class="btn btn-sm btn-warning" href="@Url.Action("Edit","PageComments",new { area ="AdminPanel",id=item.CommentID})"><i class="glyphicon glyphicon-edit"></i></a> |
                                <a class="btn btn-sm btn-info" href="@Url.Action("Details","PageComments",new { area ="AdminPanel",id=item.CommentID })"><i class="glyphicon glyphicon-info-sign"></i></a> |
                                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","PageComments",new { area ="AdminPanel",id=item.CommentID })"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
